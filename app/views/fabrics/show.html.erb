<div class="all-body mb-3">
  <div class="container">
      <div>

        <h1 class="fs-3"><%= @fabric.content %></h1>
        <%= link_to "Visit the seller's page", dashboard_path(:query => @fabric.user_id) %>

        <h1 class="fs-3"><%= "#{@fabric.content.capitalize}:" %></h1>

      </div>
    <div class="row">
      <div class="col-6">
        <div class="flex-container">
          <div class="flex-item">
          <%= image_tag "quality.png", class:"img-show-page" %>
          <%= "Quality: #{@fabric.quality}" %>
          </div>
          <div class="flex-item">
          <%= image_tag "material.png", class:"img-show-page" %>
            <%= "Material: #{@fabric.material}" %>
          </div>
          <div class="flex-item">
          <%= image_tag "color.png", class: "img-show-page fs-3" %>
            <%= "Color: #{@fabric.color}" %>
          </div>
          <div class="flex-item">
            <%= image_tag "length.png", class:"img-show-page"%>
            <%= "Length: #{@fabric.length.to_i} mt." %>
          </div>
          <div class="flex-item mt-5">
          <%= image_tag "pricetag.png", class: "img-show-page" %>
            <strong><%= "Price: #{@fabric.price.to_i} $" %></strong>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="flex-container">
          <% if @fabric.photo.attached? %>
            <%= cl_image_tag(@fabric.photo.key, class:'img-fluid') %>
          <% else %>
            <img class="img-fluid" src='<%= @fabric.link %>' />
          <% end %>
        </div>
      </div>
    </div>


        <p><%= @fabric.user.company %></p>

         <%= link_to "Buy now", create_purchase_path(@fabric), method: :post, class: "btn btn-primary mb-2" %>
          <div class="flex-item my-2 mx-3">
            <small><%= "Address: #{@fabric.address}" %></small>
          </div>
            <div id="map" class="mb-4 mt-3"

                style="width: 800px; height: 400px;"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
            </div>
  </div>
</div>



