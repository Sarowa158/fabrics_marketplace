<div class="all-body">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1> Here is your product, <%= @fabric.user.company %></h1>
        <p>Length: <%= @fabric.length %></p>
        <p>Content: <%= @fabric.content %></p>
        <p>Quality: <%= @fabric.quality %></p>
        <p>Price: <%= @fabric.price %></p>
        <p>Color: <%= @fabric.color %></p>
        <%= link_to "Buy now", purchases_path, class: "btn btn-primary" %>
      </div>
      <div class="col">
      <%= cl_image_tag(@fabric.photo.key,
      width: 400, height: 300, crop: :fill, class:'img-fluid') %>


      </div>
    </div>
  </div>
</div>
