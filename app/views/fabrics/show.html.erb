<div class="all-body">
  <div class="container">
    <div class="row">
      <div class="col">
        <h1> Here is your product, <%= @fabric.user.company %></h1>
        <p>Length: <%= @fabric.length %></p>
        <p>Content: <%= @fabric.content %></p>
        <p>Quality: <%= @fabric.quality %></p>
        <p>Price: <%= @fabric.price %></p>
        <p>Color: <%= @fabric.color %></p>
        <%= link_to "Buy now", purchases_path, class: "btn btn-primary" %>
      </div>
      <div class="col">
      <% if @fabric.photo.attached? %>
        <%= cl_image_tag(@fabric.photo.key, width: 400, height: 300, crop: :fill, class:'img-fluid') %>
      <% else %>
        <img src='https://images.unsplash.com/photo-1622532470022-24107cac5ef3?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=925&q=80' />
      <% end %>

      </div>
    </div>
  </div>
</div>
