<div class="all-body">
  <div class="container">
      <div>
        <h1 class="fs-3"><%= @fabric.content %></h1>
      </div>
    <div class="row">
      <div class="col-6">
        <div class="flex-container">
          <div class="flex-item">
            <%= image_tag "length.png", class: "img-show-page"%>
            <%= @fabric.length %>
          </div>
          <div class="flex-item">
            <%= image_tag "quality.png", class: "img-show-page" %>
          <%= @fabric.quality %>
          </div>
          <div class="flex-item">
            <%= image_tag "pricetag.png", class: "img-show-page" %>
            <%= @fabric.price %>
          </div>
          <div class="flex-item">
            <%= image_tag "color.png", class: "img-show-page" %>
            <%= @fabric.color %>
          </div>
        </div>
      </div>
      <div class="col-6">
        <div class="flex-container">
          <% if @fabric.photo.attached? %>
            <%= cl_image_tag(@fabric.photo.key, width: 200, height: 200, crop: :fill, class:'img-fluid') %>
          <% else %>
            <img class="img-fluid" src='https://images.unsplash.com/photo-1622532470022-24107cac5ef3?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=925&q=80' />
          <% end %>
        </div>
      </div>
    </div>


        <p><%= @fabric.user.company %></p>
         <%= link_to "Buy now", purchases_path, class: "btn btn-primary" %>
  </div>
</div>
